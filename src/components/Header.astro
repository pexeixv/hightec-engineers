---
const {header='relative'} = Astro.props
const headerIsAbsolute = header==='absolute'

---

<header class:list={[ 'top-0 left-0 w-full z-20', { 'absolute': headerIsAbsolute, 'bg-black': !headerIsAbsolute } ]}>
    <div class="container mx-auto px-5 py-5 lg:py-10 flex items-center text-white justify-between">
        <a href="/" class="flex items-center gap-2">
            <img src="/images/logo.svg" alt="" class="h-12">
            <span class="leading-none">Hightec <br> Engineers</span>
        </a>
        <nav class="flex items-center gap-4">
            <a href="/" class="hover:text-yellow-300 transition-colors">Home</a>
            <a href="/about" class="hover:text-yellow-300 transition-colors">About</a>
            <a href="/contact" class="hover:text-yellow-300 transition-colors">Contact</a>
        </nav>
    </div>
</header>